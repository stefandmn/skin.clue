<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol/>
	<controls>
		<control type="group">
			<posx>1392</posx>
			<include condition="!window.isactive(infodialog)">progressPosition1</include>
			<include condition="window.isactive(infodialog)">progressPosition2</include>
			<!--animations-->
			<animation type="Windowclose">
				<effect type="fade" start="100" end="0" time="400" tween="sine"/>
			</animation>
			<control type="image">
				<posx>0</posx>
				<posy>-12</posy>
				<width>8-col</width>
				<height>102</height>
				<texture>masks/selected.png</texture>
				<colordiffuse>eeFFFFFF</colordiffuse>
				<!--animations-->
				<animation type="Windowopen">
					<effect type="slide" start="1000,0" end="0,0" time="400" tween="sine"/>
				</animation>
			</control>
			<control type="label" id="30">
				<description>header label</description>
				<posx>24</posx>
				<posy>-12</posy>
				<font>smallStrong</font>
				<width>468</width>
				<height>1-row</height>
				<textcolor>black</textcolor>
				<shadowcolor>-</shadowcolor>
				<!--animations-->
				<animation type="Windowopen">
					<effect type="fade" start="0" end="100" delay="400" time="400" tween="sine"/>
				</animation>
			</control>
			<control type="textbox" id="31">
				<description>message</description>
				<posx>24</posx>
				<posy>22</posy>
				<font>pageTitle</font>
				<textcolor>black</textcolor>
				<width>468</width>
				<height>1-row</height>
				<label>-</label>
				<autoscroll delay="3000" time="1000" repeat="10000"/>
				<shadowcolor>-</shadowcolor>
				<!--animations-->
				<animation type="Windowopen">
					<effect type="fade" start="0" end="100" delay="600" time="400" tween="sine"/>
				</animation>
			</control>
		</control>

		<!--debugging-->
		<include>DebugGrid</include>
		<control type="label">
			<posy>0</posy>
			<include>DebugDialogID</include>
			<label>DialogExtendedProgressBar.xml</label>
		</control>
	</controls>
</window>
