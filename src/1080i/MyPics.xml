							</control>
						</control>
					</control>
				</control>


				<!--Folder titles-->
				<control type="group">
					<posx>312</posx>
					<posy>50</posy>
					<!--source title-->
					<control type="label">
						<visible>Integer.IsGreater(container.Numitems,0)</visible>
						<posx>0</posx>
						<posy>0</posy>
						<width>14-col</width>
						<font>pageTitle</font>
						<label>31056</label>
						<textcolor>selected</textcolor>
					</control>
					<!--source subtitle-->
					<control type="label">
						<visible>Integer.IsGreater(container.Numitems,0) + Container.HasFolders</visible>
						<posx>0</posx>
						<posy>45</posy>
						<width>24-col</width>
						<font>regular</font>
						<label>$INFO[container.Numitems,, $LOCALIZE[31037]]</label>
