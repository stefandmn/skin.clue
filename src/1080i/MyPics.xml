			<!--content provider-->
			<control type="group">
				<posx>0</posx>
				<posy>0</posy>

				
				<!-- Main menu -->
				<control type="group">
					<posx>96</posx>
					<posy>50</posy>
					
					<!-- Menu Items -->
					<control type="grouplist" id="6300">
