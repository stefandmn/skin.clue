							<visible>true</visible>
							<posx>-12</posx>
							<posy>0</posy>
							<width>22-col</width>
							<height>708</height>
							<onleft>6300</onleft>
							<onright>60</onright>
							<ondown>52</ondown>
							<onup>52</onup>
							<pagecontrol>60</pagecontrol>
							<itemlayout width="312" height="366">
								<control type="image">
									<posx>0</posx>
									<posy>0</posy>
									<width>276</width>
									<height>273</height>
									<aspectratio>scale</aspectratio>
									<texture background="true" border="0">$INFO[Listitem.icon]</texture>
								</control>
								<control type="group">
									<posx>0</posx>
									<posy>276</posy>
