										<posx>0</posx>
										<posy>0</posy>
										<width>276</width>
										<height>64</height>
										<aspectratio>stretch</aspectratio>
										<texture>masks/black.png</texture>
										<bordersize>0</bordersize>
										<colordiffuse>77FFFFFF</colordiffuse>
