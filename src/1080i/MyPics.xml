							<onclick>RunAddon($INFO[Skin.String(CustomPictureAddon3)])</onclick>
							<onclick>Control.SetFocus(52)</onclick>
						</control>
						<control type="button" id="305">
							<description>Favorites</description>
							<height>40</height>
							<width>236</width>
							<font>menuTitle</font>
							<textcolor>unselected</textcolor>
							<focusedcolor>selected</focusedcolor>
							<texturefocus>masks/selected.png</texturefocus>
							<textoffsetx>12</textoffsetx>
							<label>1036</label>
							<onclick>ActivateWindow(favourites,return)</onclick>
						</control>
					</control>
					
					<!-- Menu Options -->
					<control type="group">
						<posx>-50</posx>
						<posy>440</posy>
						<control type="label">
							<posx>-10</posx>
							<posy>45</posy>
