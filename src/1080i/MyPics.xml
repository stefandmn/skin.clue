					<control type="label">
						<visible>Integer.IsGreater(container.Numitems,0) + !Container.HasFolders</visible>
						<posx>0</posx>
						<posy>45</posy>
						<width>24-col</width>
						<font>regular</font>
						<label>$INFO[container.Numitems,, $LOCALIZE[31050]]$INFO[container.foldername, - ,]</label>
						<textcolor>selected</textcolor>
					</control>
				</control>


