<?xml version="1.0" encoding="UTF-8"?><window>	<defaultcontrol always="false">511</defaultcontrol>	<allowoverlay>yes</allowoverlay>	<onload condition="window.previous(0)">SetFocus(511)</onload>	<onload condition="SubString(skin.string(showRecentMusicItems),true)">SetFocus(612)</onload>	<previouswindow>home</previouswindow>	<controls>		<include>globalBackground</include>		<!--page container group-->		<control type="group" id="500">			<!--window fader-->			<animation type="conditional" condition="window.next(0) | window.next(1)">				<effect type="fade" start="100" end="0" time="300"/>			</animation>			<!--shift page for certain modal dialogs-->			<include>modalDialogContentShift</include>			<!--date and time-->			<include>dateTime</include>			<!-- Music overlay -->			<include>MusicOverlay</include>			<!-- Page Content -->			<control type="group" id="501">				<posx>0</posx>				<posy>0</posy>				<!-- Menus -->				<control type="group" id="510">					<posx>96</posx>					<posy>50</posy>					<!-- Left Menu: Items -->					<include content="MusicMenuItems">						<param name="id" value="511"/>						<param name="right" value="530"/>						<param name="down" value="512"/>						<param name="library" value="53"/>						<param name="latest" value="630"/>						<param name="listing" value="51"/>					</include>					<!-- Left Menu: Options -->					<include content="MusicMenuOptions">						<param name="id" value="512"/>						<param name="up" value="511"/>						<param name="right" value="530"/>					</include>				</control>				<!--Folder Titles-->				<control type="group" id="520">					<posx>312</posx>					<posy>50</posy>					<!--source title-->					<control type="label">						<posx>0</posx>						<posy>0</posy>						<width>18-col</width>						<font>pageTitle</font>						<label>$VAR[ListTitle]</label>						<textcolor>selected</textcolor>					</control>					<!--source subtitle-->					<control type="label">						<posx>0</posx>						<posy>45</posy>						<width>24-col</width>						<font>regular</font>						<label>$VAR[ListSubTitle]</label>						<textcolor>selected</textcolor>					</control>				</control>				<!--Main Content: Listings-->				<control type="group" id="530">					<posx>312</posx>					<posy>50</posy>					<animation type="windowopen">						<include>listSlideIn</include>					</animation>					<animation type="windowclose">						<effect type="fade" start="100" end="0" time="300" delay="300"/>					</animation>					<!-- Content: Latest Music -->					<include content="MusicLatestContent">						<param name="id" value="531"/>						<param name="left" value="510"/>					</include>					<!-- Content: List of General Music List -->					<include content="MusicGeneralList">						<param name="id" value="532"/>						<param name="left" value="510"/>						<param name="scroll" value="60"/>					</include>					<!-- Content: List of Artists or Genres -->					<include content="MusicArtistGenreList">						<param name="id" value="533"/>						<param name="left" value="510"/>						<param name="scroll" value="60"/>					</include>					<!-- Content: Grid View of General Music Content -->					<include content="MusicGridView">						<param name="id" value="534"/>						<param name="left" value="510"/>						<param name="scroll" value="60"/>					</include>					<!-- Song List -->					<include content="MusicSongList">						<param name="id" value="535"/>						<param name="left" value="510"/>						<param name="scroll" value="60"/>					</include>				</control>				<!--page scrollbar-->				<control type="group" id="540">					<visible>Control.IsVisible(60) + SubString(skin.string(showRecentMusicItems),false)</visible>					<animation effect="fade" start="100" end="0" time="100" condition="!controlgroup(540).hasfocus">conditional</animation>					<control type="scrollbar" id="60">						<posx>84r</posx>						<posy>222</posy>						<height>712</height>						<onleft>530</onleft>					</control>				</control>				<!--Sort / misc labels (footer)-->				<control type="group">					<posx>312</posx>					<posy>1007</posy>					<include>mediaListFooter</include>				</control>			</control>		</control>	</controls></window>