<?xml version="1.0" encoding="UTF-8"?><window>	<defaultcontrol always="false">8300</defaultcontrol>	<allowoverlay>yes</allowoverlay>	<onload condition="window.previous(0)">SetFocus(8300)</onload>	<previouswindow>home</previouswindow>	<controls>		<include>globalBackground</include>		<!--page container group-->		<control type="group">			<!--window fader-->			<animation type="conditional" condition="window.next(0) | window.next(1)">				<effect type="fade" start="100" end="0" time="300"/>			</animation>			<!--shift page for certain modal dialogs-->			<include>modalDialogContentShift</include>			<!--date and time-->			<include>dateTime</include>			<!-- Music overlay -->			<include>musicOverlay</include>			<!-- Page content group -->			<control type="group">				<posx>0</posx>				<posy>0</posy>				<!-- Left Menu -->				<control type="group">					<posx>96</posx>					<posy>50</posy>					<!-- Main Menu / Menu Items-->					<include content="musicMenuItems">						<param name="id" value="8300"/>						<param name="right" value="8000"/>						<param name="down" value="62"/>						<param name="music" value="53"/>						<param name="latest" value="8100"/>						<param name="custom" value="51"/>					</include>					<!-- Menu Options -->					<include content="musicMenuOptions">						<param name="id" value="62"/>						<param name="up" value="8300"/>						<param name="down" value="62"/>						<param name="right" value="8000"/>						<param name="left" value="8300"/>					</include>				</control>				<!--Folder titles-->				<control type="group">					<posx>312</posx>					<posy>50</posy>					<!--source title-->					<control type="label">						<posx>0</posx>						<posy>0</posy>						<width>18-col</width>						<font>pageTitle</font>						<label>$VAR[listTitle]</label>						<textcolor>selected</textcolor>					</control>					<!--source subtitle-->					<control type="label">						<posx>0</posx>						<posy>45</posy>						<width>24-col</width>						<font>regular</font>						<label>$VAR[listSubTitle]</label>						<textcolor>selected</textcolor>					</control>				</control>				<!--Main content listing-->				<control type="group" id="8000">					<posx>312</posx>					<posy>50</posy>					<animation type="windowopen">						<include>listSlideIn</include>					</animation>					<animation type="windowclose">						<effect type="fade" start="100" end="0" time="300" delay="300"/>					</animation>					<!-- Latest Music -->					<include content="musicLatestContent">						<param name="id" value="8100"/>						<param name="left" value="8300"/>					</include>					<!-- Music List -->					<include content="musicGeneralList">						<param name="id" value="51"/>						<param name="left" value="8300"/>						<param name="scroll" value="60"/>					</include>					<!-- Artist & Genre List -->					<include content="musicArtistGenreList">						<param name="id" value="53"/>						<param name="left" value="8300"/>						<param name="scroll" value="60"/>					</include>					<!-- Album Grid View -->					<include content="musicGridView">						<param name="id" value="55"/>						<param name="left" value="8300"/>						<param name="scroll" value="60"/>					</include>					<!-- Song List -->					<include content="musicSongList">						<param name="id" value="56"/>						<param name="left" value="8300"/>						<param name="scroll" value="60"/>					</include>				</control>				<!--page scrollbar-->				<control type="group" id="8200">					<visible>Control.IsVisible(60) + SubString(skin.string(showRecentMusicItems),false)</visible>					<animation effect="fade" start="100" end="0" time="100" condition="!controlgroup(8200).hasfocus">conditional</animation>					<control type="scrollbar" id="60">						<posx>84r</posx>						<posy>222</posy>						<height>712</height>						<onleft>8000</onleft>					</control>				</control>				<!--Sort / misc labels (footer)-->				<control type="group">					<posx>312</posx>					<posy>1007</posy>					<include>mediaListFooter</include>				</control>			</control>		</control>	</controls></window>