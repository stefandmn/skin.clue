<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>fadeInOut</include>

	<controls>
		<!--background-->
		<include>globalBackground</include>
		<!--date and time-->
		<include>dateTime</include>

		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>masks/black.png</texture>
			<aspectratio>stretch</aspectratio>
			<colordiffuse>99ffffff</colordiffuse>
		</control>

		<control type="group">
			<posx>168</posx>
			<posy>152</posy>
			<!--animations-->
			<include>modalDialogInOutVertical</include>
			<control type="image">
				<posx>-168</posx>
				<posy>44</posy>
				<width>fullscreenWidth</width>
				<height>1-row</height>
				<texture>masks/selected.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<posx>-3</posx>
				<posy>44</posy>
				<width>3</width>
				<height>1-row</height>
				<texture>masks/black.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="label">
				<posx>12</posx>
				<posy>44</posy>
				<width>16-col</width>
				<font>dialogTitle</font>
				<label>$LOCALIZE[24001]</label>
				<textcolor>black</textcolor>
				<shadowcolor>-</shadowcolor>
			</control>
			
			<control type="grouplist" id="4200">
				<posx>336</posx>
				<posy>44</posy>
				<width>20-col</width>
				<orientation>horizontal</orientation>
				<ondown>50</ondown>
				<control type="radiobutton" id="6">
					<description>Show notifications</description>
					<aligny>center</aligny>
					<height>57</height>
					<width>4-col</width>
					<font>smallStrong</font>
					<label>25000</label>
					<textcolor>black</textcolor>
					<focusedcolor>selected</focusedcolor>
					<texturefocus>masks/selected.png</texturefocus>
					<textoffsetx>12</textoffsetx>
					<textoffsety>-6</textoffsety>
					<ondown>4000</ondown>
				</control>
				<control type="radiobutton" id="7">
					<description>Hide foreign</description>
					<aligny>center</aligny>
					<height>57</height>
					<width>4-col</width>
					<font>smallStrong</font>
					<label>25001</label>
					<textcolor>black</textcolor>
					<focusedcolor>selected</focusedcolor>
					<texturefocus>masks/selected.png</texturefocus>
					<textoffsetx>12</textoffsetx>
					<textoffsety>-6</textoffsety>
					<ondown>4000</ondown>
				</control>
				<control type="radiobutton" id="8">
					<description>Hide incompatible</description>
					<aligny>center</aligny>
					<height>57</height>
					<width>5-col</width>
					<font>smallStrong</font>
					<label>24999</label>
					<textcolor>black</textcolor>
					<focusedcolor>selected</focusedcolor>
					<texturefocus>masks/selected.png</texturefocus>
					<textoffsetx>12</textoffsetx>
					<textoffsety>-6</textoffsety>
					<ondown>4000</ondown>
				</control>
				<control type="button" id="5">
					<align>center</align>
					<aligny>center</aligny>
					<height>57</height>
					<width>5-col</width>
					<font>smallStrong</font>
					<label>31219</label>
					<textcolor>black</textcolor>
					<focusedcolor>selected</focusedcolor>
					<texturefocus>masks/selected.png</texturefocus>
					<textoffsetx>12</textoffsetx>
					<textoffsety>-6</textoffsety>
					<ondown>4000</ondown>
				</control>
			</control>

			<!--content listing-->
			<control type="group" id="4000">
				<onup>6</onup>
				<posx>0</posx>
				<posy>-50</posy>
				<onup>4200</onup>
				<control type="panel" id="50">
					<posx>0</posx>
					<posy>3-row</posy>
					<width>22-col</width>
					<height>11-row</height>
					<onleft>4000</onleft>
					<onright>60</onright>
					<ondown>50</ondown>
					<onup>4200</onup>
					<pagecontrol>60</pagecontrol>
					<itemlayout height="1-row" width="11-col">
					<control type="image">
						<posx>4</posx>
						<posy>4</posy>
						<width>48</width>
						<height>48</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture fallback="masks/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.icon]</texture>
					</control>
					<control type="label">
						<posx>1-col</posx>
						<posy>0</posy>
						<width>7-col</width>
						<font>itemTitle</font>
						<textcolor>unselected</textcolor>
						<shadowcolor>-</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<right>48</right>
						<posy>0</posy>
						<width>4-col</width>
						<align>right</align>
						<label>$INFO[ListItem.Label2]</label>
						<font>smallMedium</font>
						<textcolor>unselected</textcolor>
						<selectedcolor>selected</selectedcolor>
						<shadowcolor>-</shadowcolor>
						<textoffsetx>24</textoffsetx>
					</control>
					</itemlayout>
					<focusedlayout height="1-row" width="11-col">
					<control type="image">
						<posx>0</posx>
						<posy>2</posy>
						<width>768</width>
						<height>53</height>
						<aspectratio>stretch</aspectratio>
						<texture border="24,0,24,0">controls/listitem-fo.png</texture>
						<bordersize>0</bordersize>
						<colordiffuse>ffFFFFFF</colordiffuse>
					</control>
					<control type="image">
						<posx>4</posx>
						<posy>4</posy>
						<width>48</width>
						<height>48</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture fallback="masks/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.icon]</texture>
					</control>
					<control type="label">
						<posx>1-col</posx>
						<posy>0</posy>
						<width>7-col</width>
						<font>itemTitle</font>
						<textcolor>black</textcolor>
						<selectedcolor>black</selectedcolor>
						<shadowcolor>-</shadowcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<right>48</right>
						<posy>0</posy>
						<width>4-col</width>
						<align>right</align>
						<label>$INFO[ListItem.Label2]</label>
						<font>smallMedium</font>
						<textcolor>black</textcolor>
						<selectedcolor>black</selectedcolor>
						<shadowcolor>-</shadowcolor>
						<textoffsetx>24</textoffsetx>
					</control>
					</focusedlayout>
				</control>
			</control>
			
			<!--page scrollbar-->
			<control type="group" id="4100">
				<visible>Control.IsVisible(60)</visible>
				<animation effect="fade" start="100" end="70" time="100" condition="!controlgroup(4100).hasfocus">conditional</animation>
				<control type="scrollbar" id="60">
					<posx>1608</posx>
					<posy>126</posy>
					<height>11-row</height>
					<onleft>4000</onleft>
				</control>
			</control>
		</control>
	</controls>
</window>