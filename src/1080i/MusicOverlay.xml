<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<control type="group">
			<posx>581r</posx>
			<posy>963</posy>
			<visible>!Window.IsActive(visualisation) + [Window.IsActive(musiclibrary) | Window.IsActive(videolibrary) | Window.IsActive(home) | Window.IsActive(musicfiles) | Window.IsActive(weather) | Window.IsActive(slideshow) | Window.IsActive(settings)]</visible>
			<!--animations-->
			<animation type="Windowopen">
				<effect type="slide" start="1000,0" end="0,0" time="300" tween="sine"/>
			</animation>
			<!-- Album Cover -->
			<control type="image">
				<posx>-112</posx>
				<posy>0</posy>
				<width>112</width>
				<height>112</height>
				<aspectratio>scale</aspectratio>
				<texture fallback="masks/vignette.png" border="0">$INFO[MusicPlayer.cover]</texture>
				<bordertexture border="2">masks/selected.png</bordertexture>
				<bordersize>2</bordersize>
				<colordiffuse>ffFFFFFF</colordiffuse>
				<visible>!isempty(MusicPlayer.cover)</visible>
			</control>
			<!--- Pause sign when the Player is on pause -->
			<control type="label">
				<visible>Player.Paused</visible>
				<posx>-112</posx>
				<posy>0</posy>
				<width>112</width>
				<height>112</height>
				<font>symbolLarge</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>unselected</textcolor>
				<shadowcolor>-</shadowcolor>
				<label></label>
			</control>
			<!-- Faded background -->
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>8-col</width>
				<height>112</height>
				<texture>masks/selected.png</texture>
				<colordiffuse>eeFFFFFF</colordiffuse>
			</control>
			<control type="group">
				<!--animations-->
				<animation type="Windowopen">
					<effect type="fade" start="0" end="100" delay="300" time="300" tween="sine"/>
				</animation>
				<control type="label">
					<description>Artist and Album</description>
					<visible>!isempty(MusicPlayer.Album)</visible>
					<posx>10</posx>
					<posy>-12</posy>
					<font>smallMedium</font>
					<width>556</width>
					<height>1-row</height>
					<label>[UPPERCASE][B]$INFO[MusicPlayer.Artist][/B] • $INFO[MusicPlayer.Album][/UPPERCASE]</label>
					<scroll>false</scroll>
					<textcolor>black</textcolor>
					<shadowcolor>-</shadowcolor>
				</control>
				<control type="label">
					<description>Only Artist because Album is not described</description>
					<visible>isempty(MusicPlayer.Album)</visible>
					<posx>10</posx>
					<posy>-12</posy>
					<font>smallMedium</font>
					<width>556</width>
					<height>1-row</height>
					<label>[UPPERCASE][B]$INFO[MusicPlayer.Artist][/B][/UPPERCASE]</label>
					<scroll>false</scroll>
					<textcolor>black</textcolor>
					<shadowcolor>-</shadowcolor>
				</control>
				<control type="label">
					<description>Song Title</description>
					<visible>!IntegerGreaterThan(System.CPUTemperature,65)</visible>
					<posx>10</posx>
					<posy>27</posy>
					<font>pageTitle</font>
					<textcolor>selected</textcolor>
					<width>556</width>
					<height>1-row</height>
					<label>$INFO[MusicPlayer.Title]</label>
					<shadowcolor>-</shadowcolor>
					<scroll>true</scroll>
					<scrollspeed>30</scrollspeed>
					<scrollsuffix> • </scrollsuffix>
				</control>
				<control type="label">
					<description>Song Title</description>
					<visible>IntegerGreaterThan(System.CPUTemperature,65)</visible>
					<posx>10</posx>
					<posy>27</posy>
					<font>pageTitle</font>
					<textcolor>selected</textcolor>
					<width>556</width>
					<height>1-row</height>
					<label>$INFO[MusicPlayer.Title]</label>
					<shadowcolor>-</shadowcolor>
					<scroll>false</scroll>
				</control>
				<control type="progress">
					<description>Progress Bar</description>
					<posx>0</posx>
					<posy>79</posy>
					<width>8-col</width>
					<height>1</height>
					<info>Player.Progress</info>
					<midtexture>masks/inactive.png</midtexture>
					<reveal>true</reveal>
				</control>
			</control>
			<control type="label">
				<description>Next Song Artist and Title</description>
				<visible>MusicPlayer.offset(1).Exists</visible>
				<posx>10</posx>
				<posy>70</posy>
				<font>smallest</font>
				<width>556</width>
				<height>1-row</height>
				<label>[B]$LOCALIZE[19031][/B]: $INFO[MusicPlayer.offset(1).Artist] - $INFO[MusicPlayer.offset(1).Title]</label>
				<scroll>false</scroll>
				<textcolor>black</textcolor>
				<shadowcolor>-</shadowcolor>
				<!--animations-->
				<animation type="Windowopen">
					<effect type="fade" start="0" end="100" delay="600" time="300" tween="sine"/>
				</animation>
			</control>
		</control>

		<!--debugging-->
		<include>DebugGrid</include>
		<control type="label">
			<include>DebugDialogID</include>
			<label>MusicOverlay.xml</label>
		</control>
	</controls>
</window>