<?xml version="1.0" encoding="UTF-8"?>

<window id="1101" type="dialog">
	<onload condition="System.HasAddon(service.clue)">RunScript(service.clue,hostname,method=get)</onload>
	<defaultcontrol always="true">1200</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<previouswindow>1100</previouswindow>

	<controls>
		<!--background-->
		<include>globalBackground</include>
		<!--date and time-->
		<include>dateTime</include>

		<!-- Header -->
		<control type="group" id="1100">
			<posx>58</posx>
			<posy>210</posy>
			<!--animations-->
			<include>modalDialogInOutVertical</include>
			<!--General info-->
			<control type="image">
				<posx>-58</posx>
				<posy>44</posy>
				<width>2000</width>
				<height>1-row</height>
				<texture>masks/selected.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<!--Dialog Icon-->
			<control type="label">
				<description>Dialog logo</description>
				<posx>-57</posx>
				<posy>45</posy>
				<width>55</width>
				<height>55</height>
				<font>symbolLarge</font>
				<align>center</align>
				<label>Ôç©</label>
				<textcolor>selected</textcolor>
			</control>
			<control type="image">
				<posx>-1</posx>
				<posy>44</posy>
				<width>3</width>
				<height>1-row</height>
				<texture>masks/black.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="label" id="1101">
				<posx>24</posx>
				<posy>44</posy>
				<width>12-col</width>
				<font>pageTitle</font>
				<label>32002</label>
				<textcolor>black</textcolor>
				<shadowcolor>-</shadowcolor>
			</control>
			<!--overlay-->
			<control type="image">
				<posx>-48</posx>
				<posy>2-row</posy>
				<width>fullscreenWidth</width>
				<height>7-row</height>
				<texture>masks/black.png</texture>
				<colordiffuse>88ffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
		</control>

		<!--Dialog -->
		<control type="group" id="1200">
			<!--animations-->
			<include>modalDialogInOutVertical</include>
			<posx>128</posx>
			<posy>320</posy>
			<width>26-col</width>
			<height>18-row</height>
			<control type="group">
				<include content="Editbox">
					<param name="id" value="1201"/>
					<param name="label" value="32003"/>
					<param name="value" value="$INFO[Skin.String(ClueSetup.Hostname)]"/>
					<param name="up" value="1202"/>
					<param name="down" value="1202"/>
					<param name="posx" value="1-col"/>
					<param name="posy" value="1-col"/>
					<param name="lwidth" value="5-col"/>
					<param name="bwidth" value="6-col"/>
					<param name="balign" value="center"/>
					<param name="window" value="1101"/>
				</include>

				<include content="Button">
					<param name="id" value="1202"/>
					<param name="label" value="32090"/>
					<param name="up" value="1201"/>
					<param name="down" value="1201"/>
					<param name="posx" value="8-col"/>
					<param name="posy" value="3-col"/>
					<param name="width" value="4-col"/>
					<param name="action" value="RunScript(service.clue,hostname,method=set)"/>
				</include>
			</control>
		</control>
	</controls>
</window>