<?xml version="1.0" encoding="UTF-8"?>
<!--power menu-->
<window type="buttonMenu">
	<defaultcontrol always="true">8000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>home</previouswindow>
	<include>fadeInOut</include>

	<controls>
		<include>modalDialog</include>

		<control type="group">
			<posx>0</posx>
			<posy>9-row</posy>
			<!--animations-->
			<include>modalDialogInOut</include>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>fullscreenWidth</width>
				<height>1-row</height>
				<texture>masks/selected.png</texture>
				<colordiffuse>11FFFFFF</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="label">
				<posx>26-col</posx>
				<posy>0</posy>
				<width>48</width>
				<height>1-row</height>
				<align>center</align>
      			<aligny>center</aligny>
				<font>symbolLarge</font>
				<label>ïŒ¸</label>
				<textcolor>selected</textcolor>
			</control>
			<control type="list" id="8000">
				<posx>0</posx>
				<posy>0</posy>
				<width>26-col</width>
				<height>1-row</height>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<itemlayout width="4-col" height="1-row">
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>4-col</width>
						<align>center</align>
						<aligny>center</aligny>
						<font>itemTitle</font>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.label]</label>
						<shadowcolor>-</shadowcolor>
					</control>
				</itemlayout>
				<focusedlayout width="4-col" height="1-row">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>4-col</width>
						<height>1-row</height>
						<aspectratio>stretch</aspectratio>
						<colordiffuse>FFFFFFFF</colordiffuse>
						<texture>masks/selected.png</texture>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>4-col</width>
						<align>center</align>
						<aligny>center</aligny>
						<font>itemTitle</font>
						<textcolor>selected</textcolor>
						<label>$INFO[ListItem.label]</label>
						<shadowcolor>-</shadowcolor>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<label>13016</label>
						<visible>System.CanPowerDown + !Skin.HasSetting(exitFirst)</visible>
						<thumb>-</thumb>
						<onclick>Powerdown()</onclick>
					</item>
					<item id="2">
						<description>Exit to desktop</description>
						<visible>Skin.HasSetting(exitFirst)</visible>
						<label>13012</label>
						<thumb>-</thumb>
						<onclick>Quit()</onclick>
					</item>
					<item id="3">
						<label>13011</label>
						<visible>System.CanSuspend</visible>
						<thumb>-</thumb>
						<onclick>Suspend()</onclick>
					</item>
					<item id="4">
						<label>13010</label>
						<visible>System.CanHibernate</visible>
						<thumb>-</thumb>
						<onclick>Hibernate()</onclick>
					</item>
					<item id="5">
						<label>13013</label>
						<thumb>-</thumb>
						<onclick>Reboot()</onclick>
					</item>
					<item id="6">
						<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
						<visible>System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)</visible>
						<visible>System.Loggedon</visible>
						<thumb>-</thumb>
						<onclick>System.LogOff</onclick>
						<onclick>Dialog.Close(all,true)</onclick>
					</item>
					<item id="7">
						<description>Exit to console</description>
						<visible>!Skin.HasSetting(exitFirst)</visible>
						<label>13012</label>
						<thumb>-</thumb>
						<onclick>Quit()</onclick>
					</item>
					<item id="8">
						<description>Exit to console</description>
						<label>13016</label>
						<visible>System.CanPowerDown + Skin.HasSetting(exitFirst)</visible>
						<thumb>-</thumb>
						<onclick>Powerdown()</onclick>
					</item>
					<item id="9">
						<description>Reload skin</description>
						<label>31164</label>
						<thumb>-</thumb>
						<onclick>ReloadSkin()</onclick>
					</item>
				</content>
			</control>
		</control>
	</controls>
</window>