<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include file="Defaults.xml"/>
	<include file="Includes_variables.xml"/>
	<include file="Includes_animations.xml"/>
	<include file="Includes_menuitems.xml"/>
	<include file="ViewsVideos.xml"/>
	<include file="ViewsDialogs.xml"/>
	<include file="ViewsMusic.xml"/>
	<include file="ViewsPictures.xml"/>

	<!--fullscreen coordinates -->
	<include name="dimensionsFullscreen">
		<posx>0</posx>
		<posy>0</posy>
		<width>fullscreenWidth</width>
		<height>fullscreenHeight</height>
	</include>

	<!--modal dialogs-->
	<include name="modalDialog">
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>masks/black.png</texture>
			<colordiffuse>eeFFFFFF</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>masks/vignette.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
	</include>

	<!--Global background-->
	<include name="globalBackground">
		<!--Preview window-->
		<control type="group">
			<visible>Player.HasVideo</visible>
			<control type="videowindow">
				<include>dimensionsFullscreen</include>
			</control>
			<control type="image">
				<include>dimensionsFullscreen</include>
				<texture>masks/black.png</texture>
				<colordiffuse>77FFFFFF</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
		</control>
		<control type="group">
			<visible>!Player.HasVideo</visible>
			<control type="image">
				<include>dimensionsFullscreen</include>
				<texture>masks/black.png</texture>
				<colordiffuse>ffFFFFFF</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<!--default background-->
			<control type="image">
				<visible>!Skin.HasSetting(useGlobalFanartBackground) + isempty(skin.string(globalBackground))</visible>
				<include>dimensionsFullscreen</include>
				<texture>special://skin/media/backgrounds/background001.png</texture>
				<colordiffuse>6affffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
				<animation effect="fade" start="0" end="100" time="1000" condition="window.previous(home)">windowopen</animation>
			</control>
			<!--User setting: global background override-->
			<control type="image">
				<visible>!Skin.HasSetting(useGlobalFanartBackground) + !isempty(skin.string(globalBackground))</visible>
				<include>dimensionsFullscreen</include>
				<texture>$INFO[skin.string(globalBackground)]</texture>
				<colordiffuse>6Affffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
				<animation effect="fade" start="0" end="100" time="1000" condition="window.previous(home)">windowopen</animation>
			</control>
			<!--User setting: rolling fanart slides-->
			<control type="multiimage">
				<visible>Skin.HasSetting(useGlobalFanartBackground) + !Container.content(seasons) + !Container.content(songs) + [!Container.content(episodes) | Substring(Container.folderpath,plugin)]</visible>
				<posx>0</posx>
				<posy>0</posy>
				<include>dimensionsFullscreen</include>
				<imagepath>$VAR[fanartType]</imagepath>
				<timeperimage>25000</timeperimage>
				<fadetime>1000</fadetime>
				<pauseatend>10000</pauseatend>
				<randomize>true</randomize>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>6affffff</colordiffuse>
				<animation type="windowopen">
					<effect type="fade" start="0" end="100" time="500" delay="400"/>
				</animation>
				<animation type="windowclose">
					<effect type="fade" start="100" end="0" time="300"/>
				</animation>
			</control>
			<!--show media fanart in relevant sections-->
			<control type="group">
				<visible>[container.content(Movies) | container.content(TVShows) | container.content(Seasons) | container.content(MusicVideos) | [container.content(Episodes) + !Substring(Container.folderpath,iplayer)]] +
					SubString(skin.string(showRecentVideoItems),false)
				</visible>
				<animation type="visible" reversible="false">
					<effect type="fade" start="0" end="100" time="500" delay="400"/>
				</animation>
				<control type="image">
					<include>dimensionsFullscreen</include>
					<texture>$INFO[listitem.art(fanart)]</texture>
					<colordiffuse>6affffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
			</control>
			<control type="image">
				<include>dimensionsFullscreen</include>
				<texture>masks/vignette.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<!--Artist Slideshow in Home screen-->
			<control type="group">
				<visible>Player.HasAudio + Window.IsActive(home) + Skin.HasSetting(HomeArtistInformation) + !Skin.HasSetting(useGlobalFanartBackground)</visible>
				<control type="image">
					<visible>isempty(Window(Visualisation).Property(ArtistInformation))</visible>
					<posx>0</posx>
					<posy>0</posy>
					<include>dimensionsFullscreen</include>
					<fadetime>200</fadetime>
					<texture background="true">$INFO[MusicPlayer.Property(Fanart_Image)]</texture>
					<aspectratio align="left" aligny="top">stretch</aspectratio>
				</control>
				<control type="multiimage">
					<visible>!isempty(Window(Visualisation).Property(ArtistInformation))</visible>
					<posx>0</posx>
					<posy>0</posy>
					<include>dimensionsFullscreen</include>
					<imagepath background="true">$INFO[Window(Visualisation).Property(ArtistInformation)]</imagepath>
					<aspectratio>keep</aspectratio>
					<timeperimage>15000</timeperimage>
					<fadetime>1000</fadetime>
					<randomize>true</randomize>
				</control>
			</control>
		</control>
	</include>

	<!--date and time-->
	<include name="dateTime">
		<control type="label">
			<posx>15r</posx>
			<posy>5</posy>
			<width>13-col</width>
			<align>right</align>
			<font>smallMedium</font>
			<textcolor>unselected</textcolor>
			<label>$INFO[System.Date][B] • $INFO[System.Time][/B]</label>
			<animation effect="fade" end="55" condition="true">Conditional</animation>
		</control>
	</include>

	<!-- Home Navigation control -->
	<include name="navigationHome">
		<control type="button" id="9000">
			<description>Home button</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>50</width>
			<height>50</height>
			<font>symbol</font>
			<aligny>center</aligny>
			<align>center</align>
			<textoffsetx>0</textoffsetx>
			<focusedcolor>selected</focusedcolor>
			<textcolor>unselected</textcolor>
			<label>↸</label>
			<texturefocus>masks/selected.png</texturefocus>
			<texturenofocus>masks/black.png</texturenofocus>
			<onup>ActivateWindow(home)</onup>
			<ondown>9100</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onclick>ActivateWindow(home)</onclick>
		</control>
	</include>

	<!-- Back Navigation control -->
	<include name="navigationBack">
		<control type="button" id="9001">
			<description>Return button</description>
			<posx>50</posx>
			<posy>0</posy>
			<width>50</width>
			<height>50</height>
			<font>symbol</font>
			<aligny>center</aligny>
			<align>center</align>
			<textoffsetx>0</textoffsetx>
			<focusedcolor>selected</focusedcolor>
			<textcolor>unselected</textcolor>
			<label></label>
			<texturefocus>masks/selected.png</texturefocus>
			<texturenofocus>masks/black.png</texturenofocus>
			<onup>9001</onup>
			<ondown>8000</ondown>
			<onleft>9000</onleft>
			<onright>9001</onright>
			<onclick>back</onclick>
		</control>
	</include>

	<!--busy indicator-->
	<include name="loadingIndicator">
		<control type="group">
			<visible>!IntegerGreaterThan(container.numitems,0) | Skin.HasSetting(ClueBusy4Loading)</visible>
			<posx>0</posx>
			<posy>0</posy>
			<!--animations-->
			<animation type="visible">
				<effect type="fade" start="0" end="100" time="400"/>
			</animation>
			<animation type="hidden">
				<effect type="fade" start="100" end="0" time="200"/>
			</animation>
			<control type="image">
				<include>dimensionsFullscreen</include>
				<texture>masks/black.png</texture>
				<colordiffuse>77FFFFFF</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<include>dimensionsFullscreen</include>
				<texture>masks/vignette.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<posx>13-col</posx>
				<posy>494</posy>
				<width>50</width>
				<height>50</height>
				<aspectratio>keep</aspectratio>
				<texture border="0">busy.gif</texture>
				<bordertexture border="0">-</bordertexture>
				<colordiffuse>99FFFFFF</colordiffuse>
			</control>
		</control>
	</include>

	<!--footer for media lists-->
	<include name="mediaListFooter">
		<visible>SubString(skin.string(showRecentVideoItems),false)</visible>
		<control type="grouplist">
			<posx>0</posx>
			<posy>-6</posy>
			<width>20-col</width>
			<height>1-row</height>
			<itemgap>6</itemgap>
			<onleft>50</onleft>
			<onright>50</onright>
			<onup>9999</onup>
			<ondown>9999</ondown>
			<orientation>horizontal</orientation>
			<control type="label">
				<width>auto</width>
				<font>symbol</font>
				<textcolor>selected</textcolor>
				<label></label>
			</control>
			<control type="label">
				<width>auto</width>
				<font>buttonTitle</font>
				<textcolor>unselected</textcolor>
				<label>$LOCALIZE[31038] $INFO[container.currentpage] / $INFO[container.numpages]</label>
			</control>
			<control type="label">
				<visible>System.Setting(hidewatched)</visible>
				<width>auto</width>
				<font>symbol</font>
				<textcolor>selected</textcolor>
				<label></label>
			</control>
			<control type="label">
				<visible>System.Setting(hidewatched)</visible>
				<width>auto</width>
				<font>buttonTitle</font>
				<label>$LOCALIZE[31118]</label>
				<textcolor>unselected</textcolor>
			</control>
			<control type="label">
				<visible>!isempty(ListItem.audiocodec)</visible>
				<width>auto</width>
				<font>symbol</font>
				<textcolor>selected</textcolor>
				<label></label>
			</control>
			<control type="label">
				<visible>!isempty(ListItem.audiocodec)</visible>
				<width>auto</width>
				<font>buttonTitle</font>
				<textcolor>unselected</textcolor>
				<label>$INFO[ListItem.audiocodec]</label>
			</control>
			<control type="label">
				<visible>!isempty(ListItem.FileName)</visible>
				<width>auto</width>
				<font>symbol</font>
				<textcolor>selected</textcolor>
				<label></label>
			</control>
			<control type="label">
				<visible>!isempty(ListItem.FileName)</visible>
				<width>auto</width>
				<font>buttonTitle</font>
				<textcolor>unselected</textcolor>
				<label>$INFO[ListItem.FileName]</label>
			</control>
		</control>
	</include>

    <!--conditional positioning for progress dialogs (avoid overlaps)-->
    <include name="progressPosition1">
		<posy>95</posy>
	</include>
    <include name="progressPosition2">
		<posy>209</posy>
	</include>

	<!--Debug Window Label-->
	<include name="DebugDialogID">
		<posx>15</posx>
		<posy>15</posy>
		<width>fullscreenwidth</width>
		<height>1-row</height>
		<font>smallStrong</font>
		<textcolor>selected</textcolor>
		<align>left</align>
		<visible>Skin.HasSetting(DebugInfo)</visible>
	</include>

	<!--Debug Dialog Label-->
	<include name="DebugWindowID">
		<posx>15</posx>
		<posy>45</posy>
		<width>fullscreenwidth</width>
		<height>1-row</height>
		<font>smallStrong</font>
		<textcolor>selected</textcolor>
		<align>left</align>
		<visible>Skin.HasSetting(DebugInfo)</visible>
	</include>

	<!--Debug Label for other type of screens-->
	<include name="DebugScreenID">
		<posx>15</posx>
		<posy>75</posy>
		<width>fullscreenwidth</width>
		<height>1-row</height>
		<font>smallStrong</font>
		<textcolor>selected</textcolor>
		<align>left</align>
		<visible>Skin.HasSetting(DebugInfo)</visible>
	</include>

	<!-- Keyboard button coordinates -->
	<include name="KeyboardButton">
		<width>1-col</width>
		<height>1-col</height>
		<texturenofocus>masks/keyunselected.png</texturenofocus>
		<texturefocus>masks/keyaccent.png</texturefocus>
		<focusedcolor>selected</focusedcolor>
		<textcolor>selected</textcolor>
		<align>center</align>
		<aligny>center</aligny>
		<font>buttonTitle</font>
		<focusedcolor>black</focusedcolor>
	</include>

	<!--Debug grid control-->
	<include name="DebugGrid">
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>debug.png</texture>
			<colordiffuse>77FFFFFF</colordiffuse>
			<visible>Skin.HasSetting(DebugGrid)</visible>
		</control>
	</include>
</includes>