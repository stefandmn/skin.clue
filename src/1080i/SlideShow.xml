<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<!--vignette-->
		<control type="image">
			<include>dimensionsFullscreen</include>
			<texture>masks/vignette.png</texture>
			<colordiffuse>ffffffff</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>

		<!-- Picture Info-->
		<control type="group">
			<posx>384</posx>
			<posy>950</posy>
			<!--background-->
			<control type="image">
				<posx>0</posx>
				<posy>2</posy>
				<width>13-col</width>
				<height>53</height>
				<aspectratio>stretch</aspectratio>
				<texture border="24,0,24,0">controls/listitem-nf.png</texture>
				<bordersize>0</bordersize>
				<colordiffuse>99FFFFFF</colordiffuse>
			</control>
			<!--image tags-->
			<control type="label">
				<posx>14</posx>
				<posy>0</posy>
				<width>82</width>
				<font>smallStrong</font>
				<textcolor>unselected</textcolor>
				<shadowcolor>-</shadowcolor>
				<align>left</align>
				<label>$INFO[Slideshow.SlideIndex]</label>
			</control>
			<control type="label">
				<posx>96</posx>
				<posy>0</posy>
				<width>720</width>
				<font>itemTitle</font>
				<textcolor>unselected</textcolor>
				<shadowcolor>-</shadowcolor>
				<align>center</align>
				<label>$INFO[Slideshow.Filename]</label>
			</control>
			<control type="label">
				<posx>816</posx>
				<posy>0</posy>
				<width>144</width>
				<font>smallStrong</font>
				<textcolor>unselected</textcolor>
				<shadowcolor>-</shadowcolor>
				<align>left</align>
				<label>$INFO[Slideshow.Filedate]</label>
			</control>
		</control>
	</controls>
</window>