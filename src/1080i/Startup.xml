<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<onload>Skin.SetBool(showRecentVideoItems)</onload>
	<onload>Skin.SetBool(showRecentMusicItems)</onload>
	<onload condition="!Skin.HasSetting(HomeSlideshow)">Skin.SetString(HomeSlideshow,true)</onload>
	<onload condition="!Skin.HasSetting(MusicSlideshow)">Skin.SetString(MusicSlideshow,true)</onload>
	<coordinates>
		<posx>15</posx>
		<posy>15</posy>
	</coordinates>

	<controls>
		<control type="button" id="10">
			<description>Startup Trigger</description>
			<onfocus>ReplaceWindow(home)</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
		</control>
	</controls>
</window>
