							<posy>2</posy>
							<width>6-col</width>
							<font>menuTitle</font>
							<textcolor>black</textcolor>
							<label>$INFO[ListItem.label]</label>
							<shadowcolor>-</shadowcolor>
						</control>
					</focusedlayout>
					<content>
						<item id="1">
							<visible>!substring(ListItem.Property(Addon.path),http,Left)</visible>
							<label>31117</label>
							<label2></label2>
							<thumb>-</thumb>
