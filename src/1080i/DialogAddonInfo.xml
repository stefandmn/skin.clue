						<control type="label">
							<posx>24</posx>
							<posy>0</posy>
							<width>1-col</width>
							<font>symbol</font>
							<textcolor>black</textcolor>
							<label>$INFO[ListItem.label2]</label>
							<shadowcolor>-</shadowcolor>
						</control>
						<control type="label">
