							<posx>0</posx>
							<posy>2</posy>
							<width>6-col</width>
							<height>53</height>
							<aspectratio>stretch</aspectratio>
							<texture>masks/black.png</texture>
						</control>
						<control type="label">
							<posx>24</posx>
							<posy>0</posy>
							<width>1-col</width>
							<font>symbol</font>
							<textcolor>selected</textcolor>
							<label>$INFO[ListItem.label2]</label>
							<shadowcolor>-</shadowcolor>
						</control>
						<control type="label">
							<posx>1-col</posx>
							<posy>2</posy>
