<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">8000</defaultcontrol>
	<allowoverlay>no</allowoverlay>

	<controls>
		<!--fanart / coverart if available-->
		<control type="group">
			<posx>0</posx>
			<posy>0</posy>
